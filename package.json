{
  "name": "@polyrepo/polyrepo-manager",
  "description": "Scripts for managing polyrepo projects",
  "module": "src/index.ts",
  "type": "module",
  "version": "1.1.0",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "./bin.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "polyCopy": {
    "@polyrepo/template-bun": [
      ".github",
      "LICENSE",
      ".gitignore",
      "biome.json",
      ".husky",
      "tsconfig.json",
      "tsconfig.ci.json"
    ]
  },
  "bin": {
    "poly": "./bin.js"
  },
  "scripts": {
    "copy": "bun run src/copy.ts",
    "installs": "bun run src/installs.ts",
    "unbuild": "bunx unbuild"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "zx": "^8.1.4"
  }
}